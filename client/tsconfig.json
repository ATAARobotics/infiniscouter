{
  "compilerOptions": {
    "jsxImportSource": "preact",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "skipLibCheck": true,
    "paths": {
      "react": ["node_modules/preact/compat"],
      "react-dom": ["./node_modules/preact/compat/"]
    },
    "typeRoots": ["src/types", "./node_modules/@types"]
  },
  "resolve": {
    "extensions": [".js", ".jsx", ".ts", ".tsx", ".json", ".svg", ".css"]
  },
  "include": ["src"]
}
